<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration xmlns:xi="http://www.w3.org/2001/XInclude">

<xi:include href="/grid/0/gs/conf/local/local-superuser-conf.xml"/>

<!-- file system properties -->

  <property>
    <name>fs.default.name</name>
    <!-- cluster variant -->
    <value>hdfs://gsbl00000.blue.ygrid.yahoo.com:8020</value>
    <!-- value>viewfs:///</value -->
    <description>The name of the default file system.  Either the
  literal string "local" or a host:port for NDFS.</description>
    <final>true</final>
  </property>

  <property>
    <name>fs.viewfs.impl</name>
    <value>org.apache.hadoop.fs.viewfs.ViewFileSystem</value>
    <description>The File System for viewfs:uris </description>
  </property>


  <property>
    <name>fs.trash.interval</name>
    <value>360</value>
    <description>Number of minutes between trash checkpoints.
  If zero, the trash feature is disabled.
  </description>
  </property>


</configuration>
