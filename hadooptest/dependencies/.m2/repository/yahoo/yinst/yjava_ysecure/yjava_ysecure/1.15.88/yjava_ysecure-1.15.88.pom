<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>yahoo.yinst.yjava_base_build</groupId>
        <artifactId>yjava_base_build</artifactId>
        <version>3.1.6.164</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>yahoo.yinst.yjava_ysecure</groupId>
    <artifactId>yjava_ysecure</artifactId>
    <name>yjava_ysecure_interface</name>
    <version>1.15.${build}</version>
    <packaging>jar</packaging>

    <url>http://twiki.corp.yahoo.com/view/JavaPlatform/PackageYJavaYSecure</url>
  
	<properties>
		<bug.component>yjava_ysecure</bug.component>
		<scm.path>yahoo/yjava/yinfra/ysecure/trunk</scm.path>
		<mailingList.name>java-platform-devel</mailingList.name>
		<javadocs.package.exclude>yjava.security.ysecure.internal.jni</javadocs.package.exclude>
	</properties>

    <dependencies>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>6.3.1</version>
            <scope>test</scope>
        </dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<version>1.7</version>
			<scope>test</scope>
		</dependency>
    </dependencies>
    <build>
    	<plugins>
	        <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
					<configuration>
	                    <archive>
	                        <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
	                    </archive>
				</configuration>
			</plugin>
	        <plugin>
	            <groupId>org.apache.felix</groupId>
	            <artifactId>maven-bundle-plugin</artifactId>
	            <extensions>true</extensions>
	            <executions>
	                <execution>
	                    <id>bundle-manifest</id>
	                    <phase>process-classes</phase>
	                    <goals>
	                        <goal>manifest</goal>
	                    </goals>
	                </execution>
	            </executions>
	            <configuration>
	                <instructions>
	                    <Bundle-SymbolicName>yjava.security.ysecure</Bundle-SymbolicName>
	                    <Bundle-Name>${pom.name}</Bundle-Name>
	                    <Bundle-Version>${version}</Bundle-Version>
						<Import-Package>yjava.security.ysecure.internal.jni;resolution:=optional</Import-Package>
	                    <Export-Package>
	                        yjava.security.ysecure;version="${version}",
	                        yjava.security.ysecure.ykeykey;version="${version}"
	                    </Export-Package>
	                </instructions>
	            </configuration>
	        </plugin>
    	</plugins>
    </build>

</project>
