<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>yahoo.yinst.yjava_base_build</groupId>
        <artifactId>yjava_base_build</artifactId>
        <version>2.1.6.88</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>yahoo.yinst.yjava_yck</groupId>
    <artifactId>yjava_yck</artifactId>
    <packaging>jar</packaging>
    <version>0.6.${build}</version>
    <name>yjava_yck</name>
    <url>http://twiki.corp.yahoo.com/view/JavaPlatform/PackageYJavaYCK</url>
    <description>Java wrappers for YCK</description>

    <issueManagement>
        <system>Yahoo! Corporate Bugzilla</system>
        <url>http://bug.corp.yahoo.com/buglist.cgi?query_format=advanced&amp;product_name=java-platform&amp;component=yjava_yck&amp;bug_status=__open__</url>
    </issueManagement>

    <scm>
        <developerConnection>scm:svn:svn+ssh://svn.corp.yahoo.com/yahoo/yjava/yinfra/yck/trunk</developerConnection>
        <url>http://svn.corp.yahoo.com/view/yahoo/yjava/yinfra/yck/trunk/</url>
    </scm>

    <properties>
        <javadocs.package.exclude>yjava.security.yck.internal</javadocs.package.exclude>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>5.14.9</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>yahoo.yinst.yjava_junit_extensions</groupId>
            <artifactId>yjava_junit_extensions</artifactId>
            <version>0.0.7</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-compile</id>
                        <configuration>
                            <showDeprecation>true</showDeprecation>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                    <showWarnings>true</showWarnings>
                    <optimize>true</optimize>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <argLine>-Djava.library.path=target/native/${platform}.gcov</argLine>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-cookies</id>
                        <phase>generate-test-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>target/native/${platform}.gcov/create_test_cookie</executable>
                            <commandlineArgs>target/yck_testcases.txt 0 sled 1 scope login</commandlineArgs>
                            <outputFile>target/create_test_cookie.out</outputFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-site-plugin</artifactId>
                <version>2.1.1</version>
            </plugin>
	        <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
					<configuration>
	                    <archive>
	                        <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
	                    </archive>
				</configuration>
			</plugin>
	        <plugin>
	            <groupId>org.apache.felix</groupId>
	            <artifactId>maven-bundle-plugin</artifactId>
	            <version>2.3.4</version>
	            <extensions>true</extensions>
	            <executions>
	                <execution>
	                    <id>bundle-manifest</id>
	                    <phase>process-classes</phase>
	                    <goals>
	                        <goal>manifest</goal>
	                    </goals>
	                </execution>
	            </executions>
	            <configuration>
	                <instructions>
	                    <Bundle-SymbolicName>com.yahoo.yjava.yck</Bundle-SymbolicName>
	                    <Bundle-Name>${pom.name}</Bundle-Name>
	                    <Bundle-Version>${version}</Bundle-Version>
						<Import-Package>*;resolution:=optional</Import-Package>
	                    <Export-Package>
	                        com.yahoo.yjava.yck;version="${version}",
	                        yjava.security.yck;version="${version}",
	                        yjava.security.yck.internal;version="${version}"
	                    </Export-Package>
	                </instructions>
	            </configuration>
	        </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>linux64</id>
            <activation>
                <os>
                    <name>Linux</name>
                    <arch>amd64</arch>
                </os>
            </activation>
            <properties>
                <platform>x86_64-rhel4-gcc3</platform>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>test-32bit-on64bit</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <argLine>-Djava.library.path=target/native/i386-rhel4-gcc3</argLine>
                                    <jvm>/home/y/libexec/java/bin/java</jvm>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <name>Linux</name>
                    <arch>i386</arch>
                </os>
            </activation>
            <properties>
                <platform>i386-rhel4-gcc3</platform>
            </properties>
        </profile>
        <profile>
            <id>secondary</id>
            <activation>
                <property>
                    <name>secondary</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>stress-test</id>
                                <!-- so it doesn't get executed in clover forked life cycle, but before wasting time in creating a package -->
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <reportsDirectory>${project.build.directory}/surefire-stresstest-reports</reportsDirectory>
                                    <argLine>-Djava.library.path=target/native/${platform}</argLine>
                                    <test>**/*IT.java</test>
                                </configuration>
                            </execution>
                            <execution>
                                <id>stress-test-32bit-on64bit</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <argLine>-Djava.library.path=target/native/i386-rhel4-gcc3</argLine>
                                    <jvm>/home/y/libexec/java/bin/java</jvm>
                                    <reportsDirectory>${project.build.directory}/surefire-stresstest-reports</reportsDirectory>
                                    <test>**/*IT.java</test>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
