<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>yahoo.yinst.java_base_build</groupId>
	<artifactId>java_base_build</artifactId>
	<packaging>pom</packaging>
	<version>2.1.6.84</version>
	<name>yjava_base_build</name>
	<url>http://twiki.corp.yahoo.com/view/JavaPlatform</url>
	<description>Java Base Build Pom</description>
	<prerequisites>
		<maven>2.1</maven>
	</prerequisites>

	<properties>
		<buildtype>test</buildtype>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>${project.build.sourceEncoding}</project.reporting.outputEncoding>
		<maven-clover2-plugin.version>3.0.4</maven-clover2-plugin.version>
		<yjava_coverity_maven_plugin.version>4.4.0.4</yjava_coverity_maven_plugin.version>
		<maven-findbugs-plugin.version>2.3.1</maven-findbugs-plugin.version>
		<maven-surefire-report-plugin.version>2.5</maven-surefire-report-plugin.version>
		<com.google.testability-explorer.version>1.3.3</com.google.testability-explorer.version>
		<min_jdk_version>1.6</min_jdk_version>
		<max_jdk_version>1.7</max_jdk_version>
		<source_jdk_version>${min_jdk_version}</source_jdk_version>
		<target_jdk_version>${min_jdk_version}</target_jdk_version>
		<log4jPath>file:src/test/resources/log4j.propertie</log4jPath>
		<coverityHome>/home/y/share/coverity/prevent-linux-4.5.0</coverityHome>
	</properties>

	<repositories>
		<repository>
			<id>maven2-repository.dev.java.net</id>
			<url>http://download.java.net/maven/2/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>central</id>
			<url>http://ymaven.corp.yahoo.com:9999/proximity/repository/public</url>
		</pluginRepository>
		<pluginRepository>
			<id>maven2-repository.atlassian.com</id>
			<url>http://repository.atlassian.com/maven2</url>
		</pluginRepository>
	</pluginRepositories>

	<issueManagement>
		<system>Yahoo! Corporate Bugzilla</system>
		<url>http://bug.corp.yahoo.com/buglist.cgi?query_format=advanced&amp;product_name=${bug.product}&amp;component=${bug.component}&amp;bug_status=__open__</url>
	</issueManagement>

	<scm>
		<developerConnection>scm:svn:svn+ssh://svn.corp.yahoo.com/${scm.path}</developerConnection>
		<url>http://svn.corp.yahoo.com/view/${scm.path}</url>
	</scm>

	<mailingLists>
		<mailingList>
			<name>${mailingList.name}</name>
			<subscribe>http://ilist.yahoo.com/wws/subscribe/${mailingList.name}/</subscribe>
			<unsubscribe>http://ilist.yahoo.com/wws/signoff/${mailingList.name}/</unsubscribe>
			<post>mailto:${mailingList.name}@yahoo-inc.com</post>
			<archive>http://ilist.yahoo.com/wws/arc/${mailingList.name}</archive>
		</mailingList>
	</mailingLists>

	<build>
		<finalName>${project.artifactId}</finalName>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-clean-plugin</artifactId>
					<version>2.4.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.0.2</version>
				</plugin>
				<plugin>
					<artifactId>maven-enforcer-plugin</artifactId>
					<version>1.0-beta-1</version>
				</plugin>
				<plugin>
					<artifactId>maven-javadoc-plugin</artifactId>
					<version>2.7</version>
				</plugin>
				<plugin>
					<artifactId>maven-jxr-plugin</artifactId>
					<version>2.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-pmd-plugin</artifactId>
					<version>2.4</version>
				</plugin>
				<plugin>
					<artifactId>maven-project-info-reports-plugin</artifactId>
					<version>2.1.2</version>
				</plugin>
				<plugin>
					<artifactId>maven-site-plugin</artifactId>
					<version>2.1.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-source-plugin</artifactId>
					<version>2.1.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.1-beta-1</version>
				</plugin>
				<plugin>
					<groupId>com.atlassian.maven.plugins</groupId>
					<artifactId>maven-clover2-plugin</artifactId>
					<version>${maven-clover2-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>exec-maven-plugin</artifactId>
					<version>1.1.1</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>findbugs-maven-plugin</artifactId>
					<version>${maven-findbugs-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>javancss-maven-plugin</artifactId>
					<version>2.0</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>jdepend-maven-plugin</artifactId>
					<version>2.0-beta-2</version>
				</plugin>
				<plugin>
					<groupId>yahoo.yinst.maven_plugins</groupId>
					<artifactId>yjava_maven_plugins_buildyblocks</artifactId>
					<version>0.4.1</version>
				</plugin>
				<plugin>
					<groupId>yahoo.yinst.maven_plugins</groupId>
					<artifactId>yjava_maven_plugins_yinst</artifactId>
					<version>0.2.5</version>
				</plugin>
				<plugin>
					<groupId>yahoo.yinst.yjava_coverity_maven_plugin</groupId>
					<artifactId>yjava_coverity_maven_plugin</artifactId>
					<version>${yjava_coverity_maven_plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>yahoo.yinst.maven_plugins</groupId>
					<artifactId>yjava_maven_plugins_lint</artifactId>
					<version>1.1.7</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${source_jdk_version}</source>
					<target>${target_jdk_version}</target>
					<showDeprecation>true</showDeprecation>
					<showWarnings>true</showWarnings>
					<optimize>true</optimize>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<executions>
					<execution>
						<id>enforce</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<requireJavaVersion>
									<version>[${min_jdk_version},${max_jdk_version})</version>
								</requireJavaVersion>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.atlassian.maven.plugins</groupId>
				<artifactId>maven-clover2-plugin</artifactId>
				<version>${maven-clover2-plugin.version}</version>
				<configuration>
					<jdk>${target_jdk_version}</jdk>
					<licenseLocation>${clover_license_location}</licenseLocation>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<argLine>-Djava.library.path=${libDir} -Dlog4j.properties=${log4jPath}</argLine>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>native</id>
			<activation>
				<file>
					<exists>Makefile</exists>
				</file>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>clean</id>
								<phase>clean</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>gmake</executable>
									<commandlineArgs>cleanplatforms</commandlineArgs>
									<environmentVariables>
										<POM_VERSION>${version}</POM_VERSION>
									</environmentVariables>
								</configuration>
							</execution>
							<execution>
								<id>gmake</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>gmake</executable>
									<commandlineArgs>all/coverage-modes/os-platforms</commandlineArgs>
									<sourceRoot>target/generated-sources/swig</sourceRoot>
									<environmentVariables>
										<POM_VERSION>${version}</POM_VERSION>
									</environmentVariables>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>native-secondary</id>
			<activation>
				<property>
					<name>secondary</name>
					<value>native</value>
				</property>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<native>true</native>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>pre-analyze-native-coverity</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>rm</executable>
									<arguments>
										<argument>-f</argument>
										<argument>target/coverity/java/output/stats_report.errors.xml</argument>
									</arguments>
								</configuration>
							</execution>
							<execution>
								<id>analyze-native-coverity</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>gmake</executable>
									<commandlineArgs>coverityplatforms</commandlineArgs>
									<environmentVariables>
										<POM_VERSION>${version}</POM_VERSION>
									</environmentVariables>
								</configuration>
							</execution>
							<execution>
								<id>lcov</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>gmake</executable>
									<commandlineArgs>gen-lcov-report MODE=gcov PLATFORM=${platform}</commandlineArgs>
									<environmentVariables>
										<POM_VERSION>${version}</POM_VERSION>
									</environmentVariables>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>commit</id>
			<activation>
				<property>
					<name>commit</name>
				</property>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<native>true</native>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>yahoo.yinst.maven_plugins</groupId>
						<artifactId>yjava_maven_plugins_buildyblocks</artifactId>
						<executions>
							<execution>
								<id>default-initialize</id>
								<phase>initialize</phase>
								<goals>
									<goal>provision</goal>
								</goals>
								<configuration>
									<bimFile>commit_build.bim</bimFile>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>yahoo.yinst.maven_plugins</groupId>
						<artifactId>yjava_maven_plugins_yinst</artifactId>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>create</goal>
								</goals>
								<configuration>
									<buildtype>${buildtype}</buildtype>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>secondary</id>
			<activation>
				<property>
					<name>secondary</name>
				</property>
			</activation>
			<properties>
				<buildtype>release</buildtype>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>yahoo.yinst.maven_plugins</groupId>
						<artifactId>yjava_maven_plugins_buildyblocks</artifactId>
						<executions>
							<execution>
								<id>default-initialize</id>
								<phase>initialize</phase>
								<goals>
									<goal>provision</goal>
								</goals>
							</execution>
							<execution>
								<id>pre-integration-test</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>dist_push</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<bimFile>secondary_build.bim</bimFile>
						</configuration>
					</plugin>
					<plugin>
						<groupId>yahoo.yinst.maven_plugins</groupId>
						<artifactId>yjava_maven_plugins_lint</artifactId>
						<executions>
							<execution>
								<phase>prepare-package</phase>
								<goals>
									<goal>manifest2</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
						<executions>
							<execution>
								<phase>prepare-package</phase>
								<goals>
									<goal>jar-no-fork</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<executions>
							<execution>
								<phase>prepare-package</phase>
								<goals>
									<goal>jar</goal>
								</goals>
								<configuration>
									<excludePackageNames>${javadocs.package.exclude}</excludePackageNames>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>yahoo.yinst.yjava_coverity_maven_plugin</groupId>
						<artifactId>yjava_coverity_maven_plugin</artifactId>
						<executions>
							<execution>
								<id>analyze-coverity</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>analyze</goal>
								</goals>
								<configuration>
									<breakBuild>true</breakBuild>
								</configuration>
							</execution>
							<execution>
								<id>format-coverity</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>format</goal>
								</goals>
								<configuration>
									<breakBuild>false</breakBuild>
								</configuration>
							</execution>
						</executions>
						<configuration>
							<preventHome>${coverityHome}</preventHome>
							<checkers>
								<checker>ALL</checker>
							</checkers>
						</configuration>
					</plugin>
					<plugin>
						<groupId>com.atlassian.maven.plugins</groupId>
						<artifactId>maven-clover2-plugin</artifactId>
						<executions>
							<execution>
								<id>clover</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>instrument-test</goal>
								</goals>
								<configuration>
									<targetPercentage>1%</targetPercentage>
									<generateHtml>true</generateHtml>
									<generateXml>true</generateXml>
									<jdk>${taget_jdk_version}</jdk>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-site-plugin</artifactId>
						<executions>
							<execution>
								<phase>prepare-package</phase>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>yahoo.yinst.maven_plugins</groupId>
						<artifactId>yjava_maven_plugins_yinst</artifactId>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>create</goal>
								</goals>
								<configuration>
									<buildtype>${buildtype}</buildtype>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
			<reporting>
				<plugins>
					<plugin>
						<artifactId>maven-javadoc-plugin</artifactId>
						<configuration>
							<excludePackageNames>${javadocs.package.exclude}</excludePackageNames>
						</configuration>
					</plugin>
					<plugin>
						<artifactId>maven-jxr-plugin</artifactId>
					</plugin>
					<plugin>
						<artifactId>maven-surefire-report-plugin</artifactId>
						<version>${maven-surefire-report-plugin.version}</version>
						<configuration>
							<argLine>-Djava.library.path=${libDir} -Dlog4j.properties=${log4jPath}</argLine>
						</configuration>
					</plugin>
					<plugin>
						<artifactId>maven-pmd-plugin</artifactId>
						<reportSets>
							<reportSet>
								<reports>
									<report>pmd</report>
									<report>cpd</report>
								</reports>
							</reportSet>
						</reportSets>
						<configuration>
							<targetJdk>${target_jdk_version}</targetJdk>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>findbugs-maven-plugin</artifactId>
						<version>${maven-findbugs-plugin.version}</version>
						<configuration>
							<threshold>Normal</threshold>
							<effort>Max</effort>
							<xmlOutput>true</xmlOutput>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>javancss-maven-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>jdepend-maven-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-project-info-reports-plugin</artifactId>
						<configuration>
							<dependencyLocationsEnabled>false</dependencyLocationsEnabled>
						</configuration>
					</plugin>
					<!--
						http://jira.codehaus.org/browse/MNG-1931 forces us to specify
						versions for reporting plugins
					-->
					<plugin>
						<groupId>com.google.testability-explorer</groupId>
						<artifactId>maven-testability-plugin</artifactId>
						<version>${com.google.testability-explorer.version}</version>
					</plugin>
					<plugin>
						<groupId>yahoo.yinst.yjava_coverity_maven_plugin</groupId>
						<artifactId>yjava_coverity_maven_plugin</artifactId>
						<version>${yjava_coverity_maven_plugin.version}</version>
						<configuration>
							<preventHome>/home/y/share/coverity/prevent-linux-4.5.0</preventHome>
							<breakBuild>false</breakBuild>
						</configuration>
					</plugin>
					<plugin>
						<groupId>com.atlassian.maven.plugins</groupId>
						<artifactId>maven-clover2-plugin</artifactId>
						<version>${maven-clover2-plugin.version}</version>
						<configuration>
							<jdk>${target_jdk_version}</jdk>
							<licenseLocation>/home/y/conf/clover/clover.license</licenseLocation>
						</configuration>
					</plugin>
				</plugins>
			</reporting>
		</profile>
		<profile>
			<id>linux_64bit</id>
			<activation>
				<os>
					<name>Linux</name>
					<arch>amd64</arch>
				</os>
			</activation>
			<properties>
				<libDir>/home/y/lib64</libDir>
				<coverityHome>/home/y/share/coverity/prevent-linux64</coverityHome>
				<coverityData>/home/y/var/coverity/prevent-linux64/data</coverityData>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<executions>
							<execution>
								<id>test-32bit-on64bit</id>
								<phase>test</phase>
								<goals>
									<goal>test</goal>
								</goals>
								<configuration>
									<argLine>-Djava.library.path=/home/y/lib -Dlog4j.properties=${log4jPath}</argLine>
									<jvm>/home/y/libexec/java/bin/java</jvm>
                                    <reportsDirectory>${project.build.directory}/surefire-32bit-on64bit-reports</reportsDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>linux_32bit</id>
			<activation>
				<os>
					<name>Linux</name>
					<arch>i386</arch>
				</os>
			</activation>
			<properties>
				<libDir>/home/y/lib</libDir>
				<coverityHome>/home/y/share/coverity/prevent-linux</coverityHome>
				<coverityVar>/home/y/var/coverity/prevent-linux/data</coverityVar>
			</properties>
		</profile>
		<profile>
			<id>build-env</id>
			<activation>
				<property>
					<name>env.BUILD_NUMBER</name>
				</property>
			</activation>
			<properties>
				<build>${env.BUILD_NUMBER}</build>
			</properties>
		</profile>
		<profile>
			<id>not-build-env</id>
			<activation>
				<property>
					<name>!env.BUILD_NUMBER</name>
				</property>
			</activation>
			<properties>
				<build>0</build>
			</properties>
		</profile>
		<profile>
			<id>clover_windows</id>
			<activation>
				<os>
					<family>Windows</family>
				</os>
			</activation>
			<properties>
				<clover_license_location>C:\\clover.license</clover_license_location>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>yahoo.yinst.maven_plugins</groupId>
						<artifactId>yjava_maven_plugins_buildyblocks</artifactId>
						<configuration>
							<skip>true</skip>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
