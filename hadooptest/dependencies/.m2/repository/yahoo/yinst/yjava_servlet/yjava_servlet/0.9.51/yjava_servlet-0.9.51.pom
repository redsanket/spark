<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>yahoo.yinst.yjava_base_build</groupId>
        <artifactId>yjava_base_build</artifactId>
        <version>3.1.6.182</version>
    </parent>
    
    <modelVersion>4.0.0</modelVersion>
    <groupId>yahoo.yinst.yjava_servlet</groupId>
    <artifactId>yjava_servlet</artifactId>
    <packaging>jar</packaging>
    <version>0.9.${build}</version>
    <name>yjava_servlet</name>
    <url>http://twiki.corp.yahoo.com/view/JavaPlatform/PackageYjavaServlet</url>
    <description>Servlet api utilities</description>


    <properties>
        <bug.component>yjava_servlet</bug.component>
        <scm.path>yahoo/yjava/yinfra/servlet</scm.path>
        <mailingList.name>java-platform-devel</mailingList.name>
    </properties>

    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <type>jar</type>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>yahoo.yinst.yjava_log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.14.2</version>
            <scope>provided</scope>
        </dependency>
		<dependency>
			<groupId>yahoo.yinst.yjava_filter_logic</groupId>
			<artifactId>yjava_filter_logic</artifactId>
			<version>0.23.150</version>
			<scope>provided</scope>
		</dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>6.3.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>1.8.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>yahoo.yinst.maven_plugins</groupId>
                <artifactId>yjava_maven_plugins_yinst</artifactId>
                <version>0.4.12</version>
                <configuration>
                    <yicfPrepend>print &lt;&lt; 'EOF';</yicfPrepend>
                    <yicfAppend>EOF</yicfAppend>
                    <sourceDirectory>target/yicf</sourceDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>generate-yicf</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>yicf</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
