<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>yahoo.yinst.bouncer_auth_java</groupId>
    <artifactId>bouncer_auth_java</artifactId>
    <name>bouncer_auth_java</name>
    <description>Java Bouncer Cookie/Crumb Library</description>
    <version>0.9.${build}</version>
    <url>http://twiki.corp.yahoo.com/view/JavaPlatform</url>
    <parent>
        <groupId>yahoo.yinst.yjava_base_build</groupId>
        <artifactId>yjava_base_build</artifactId>
        <version>3.1.6.152</version>
    </parent>
    
    	<properties>
		<bug.component>bouncer_auth_java</bug.component>
		<scm.path>yahoo/yjava/yinfra/bouncer_auth_java/trunk</scm.path>
		<mailingList.name>java-platform-devel</mailingList.name>
	</properties>
    
    <dependencies>
        <dependency>
            <groupId>yahoo.yinst.yjava_ysecure</groupId>
            <artifactId>yjava_ysecure</artifactId>
            <version>1.6.23</version>
			<scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.14</version>
			<scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>yahoo.yinst.yjava_ysecure_native</groupId>
            <artifactId>yjava_ysecure_native</artifactId>
            <version>1.6.49</version>
			<scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>5.14.9</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
	        <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
					<configuration>
	                    <archive>
	                        <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
	                    </archive>
				</configuration>
			</plugin>
	        <plugin>
	            <groupId>org.apache.felix</groupId>
	            <artifactId>maven-bundle-plugin</artifactId>
	            <extensions>true</extensions>
	            <executions>
	                <execution>
	                    <id>bundle-manifest</id>
	                    <phase>process-classes</phase>
	                    <goals>
	                        <goal>manifest</goal>
	                    </goals>
	                </execution>
	            </executions>
	            <configuration>
	                <instructions>
	                    <Bundle-SymbolicName>com.yahoo.bouncer</Bundle-SymbolicName>
	                    <Bundle-Name>${pom.name}</Bundle-Name>
	                    <Bundle-Version>${version}</Bundle-Version>
						<Import-Package>*;resolution:=optional</Import-Package>
	                    <Export-Package>com.yahoo.bouncer.sso;version="${version}" 
	                    </Export-Package>
	                </instructions>
	            </configuration>
	        </plugin>
<plugin>
				<groupId>yahoo.yinst.maven_plugins</groupId>
				<artifactId>yjava_maven_plugins_yinst</artifactId>
				<version>0.4.12</version>
				<configuration>
					<yicfPrepend>print &lt;&lt; 'EOF';</yicfPrepend>
					<yicfAppend>EOF</yicfAppend>
					<sourceDirectory>target/yicf</sourceDirectory>
				</configuration>
				<executions>
					<execution>
						<id>generate-yicf</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>yicf</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
        </plugins>

    </build>

</project>
