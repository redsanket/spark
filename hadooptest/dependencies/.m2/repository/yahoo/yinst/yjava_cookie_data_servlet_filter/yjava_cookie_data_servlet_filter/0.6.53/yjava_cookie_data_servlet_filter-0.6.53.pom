<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>yahoo.yinst.yjava_cookie_data_servlet_filter</groupId>
    <artifactId>yjava_cookie_data_servlet_filter</artifactId>
    <name>yjava_cookie_data_servlet_filter</name>
    <description>Yahoo Cookie Data Servlet Filter</description>
    <version>0.6.${build}</version>
    <url>http://twiki.corp.yahoo.com/view/JavaPlatform/CookieDataServletFilter</url>
    <parent>
        <groupId>yahoo.yinst.yjava_base_build</groupId>
        <artifactId>yjava_base_build</artifactId>
        <version>2.1.6.90</version>
    </parent>
    <issueManagement>
        <system>Yahoo! Corporate Bugzilla</system>
        <url>http://bug.corp.yahoo.com/buglist.cgi?query_format=advanced&amp;product_name=java-platform&amp;component=yjava_cookie_data_servlet_filter&amp;bug_status=__open__</url>
    </issueManagement>
    <scm>
        <developerConnection>scm:svn:svn+ssh://username@svn.corp.yahoo.com/yahoo/yjava/yinfra/cookie_data_servlet_filter/trunk</developerConnection>
        <url>http://svn.corp.yahoo.com/view/yahoo/yjava/yinfra/cookie_data_servlet_filter/trunk</url>
    </scm>
    <dependencies>
        <dependency>
            <groupId>yahoo.yinst.yjava_yiv</groupId>
            <artifactId>yjava_yiv</artifactId>
            <version>0.1.14</version>
            <scope>provided</scope>
        </dependency>
		<dependency>
			<groupId>yahoo.yinst.yjava_filter_logic</groupId>
			<artifactId>yjava_filter_logic</artifactId>
			<version>0.13.72</version>
			<scope>provided</scope>
		</dependency>
        <dependency>
            <groupId>yahoo.yinst.yjava_yck</groupId>
            <artifactId>yjava_yck</artifactId>
            <version>0.6.37</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>yahoo.yinst.yjava_bcookie</groupId>
            <artifactId>yjava_bcookie</artifactId>
            <version>1.3.18</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>yahoo.yinst.yjava_bcookie</groupId>
            <artifactId>yjava_bcookie_jni</artifactId>
            <version>1.3.18</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>yahoo.yinst.yjava_ysecure</groupId>
            <artifactId>yjava_ysecure</artifactId>
            <version>1.6.22</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>yahoo.yinst.yjava_ysecure_native</groupId>
            <artifactId>yjava_ysecure_native</artifactId>
            <version>1.5.25</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>yahoo.yinst.yjava_log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.14.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>yahoo.yinst.yjava_servlet</groupId>
            <artifactId>yjava_servlet</artifactId>
            <version>0.4.18</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>5.14.9</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>1.8.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
            <version>4.0.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <argLine>-Djava.library.path=${platform}</argLine>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>linux64</id>
            <activation>
                <os>
                    <name>Linux</name>
                    <arch>amd64</arch>
                </os>
            </activation>
            <properties>
                <platform>/home/y/lib64</platform>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>test-32bit-on64bit</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <argLine>-Djava.library.path=/home/y/lib</argLine>
                                    <jvm>/home/y/libexec/java/bin/java</jvm>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <name>Linux</name>
                    <arch>i386</arch>
                </os>
            </activation>
            <properties>
                <platform>/home/y/lib</platform>
            </properties>
        </profile>
        <profile>
            <id>secondary</id>
            <activation>
                <property>
                    <name>secondary</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>yahoo.yinst.maven_plugins</groupId>
                        <artifactId>yjava_maven_plugins_buildyblocks</artifactId>
                        <executions>
                            <execution>
                                <id>pre-integration-test</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>dist_push</goal>
                                    <goal>igor_update</goal>
                                    <goal>staging</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <bimFile>secondary_build.bim</bimFile>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>failsafe-maven-plugin</artifactId>
                        <version>2.4.3-alpha-1</version>
                        <executions>
                            <execution>
                                <id>default-integration-test</id>
                                <goals>
                                    <goal>integration-test</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>default-verify</id>
                                <goals>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <argLine>-Djava.library.path=${platform}</argLine>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
