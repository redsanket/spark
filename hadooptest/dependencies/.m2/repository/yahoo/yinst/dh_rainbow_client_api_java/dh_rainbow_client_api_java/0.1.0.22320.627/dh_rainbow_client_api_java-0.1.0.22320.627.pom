<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>yahoo.yinst.java_base_build</groupId>
		<artifactId>java_base_build</artifactId>
		<version>3.1.6.182</version>
	</parent>

	<groupId>yahoo.yinst.dh_rainbow_client_api_java</groupId>
	<artifactId>dh_rainbow_client_api_java</artifactId>
	<packaging>jar</packaging>
	<version>0.0.3.${env.svn_revision}.${env.build_number}</version>
	<name>dh_rainbow_client_api_java</name>
	<url>http://twiki.corp.yahoo.com/View/UDA/DataHighway</url>
	<description>The Data Highway Rainbow client api for java</description>

	<prerequisites>
		<maven>2.1</maven>
	</prerequisites>

	<issueManagement>
		<system>Yahoo! Corporate Bugzilla</system>
		<url>http://bug.corp.yahoo.com/buglist.cgi?query_format=advanced&amp;product_name=DHRAINBOW&amp;component=DHAPI&amp;bug_status=__open__</url>
	</issueManagement>

	<scm>
		<developerConnection>scm:svn:svn+ssh://svn.corp.yahoo.com/yahoo/ccdi/dhrainbow/trunk/client_api_java</developerConnection>
		<connection>scm:svn:svn+ssh://svn.corp.yahoo.com/yahoo/ccdi/dhrainbow/trunk/client_api_java</connection>
		<url>http://svn.corp.yahoo.com/view/yahoo/ccdi/dhrainbow/trunk/client_api_java</url>
	</scm>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9</version>
				<configuration> 
				</configuration> 
			</plugin>
		</plugins>
	</reporting>
	<properties>
		<scm.path>yahoo/ccdi/dhrainbow/trunk/${project.artifactId}</scm.path>
		<failIfNoTests>false</failIfNoTests>
		<log4jPath>src/main/resources/log4j.properties</log4jPath>
		<!--
		<dh.build.version>0</dh.build.version>
		<pkgVersion>0.0.1.${build}</pkgVersion>
		-->
		<surefireArgs></surefireArgs>
		<commitBim>ci-bb/commit.bim</commitBim>
		<componentBim>ci-bb/component.bim</componentBim>
	</properties>

	<dependencies>
		<dependency>
			<groupId>maven-plugins</groupId>
			<artifactId>maven-doxygen-plugin</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20090211</version>
		</dependency>
		<dependency>
			<groupId>yahoo.yinst.jports_org_apache_avro__avro</groupId>
			<artifactId>org_apache_avro__avro</artifactId>
			<version>1.7.3_1</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-core-asl</artifactId>
			<version>1.9.11</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-mapper-asl</artifactId>
			<version>1.9.11</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.17</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.5</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.7.5</version>
		</dependency>
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>6.8.5</version>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>junit</groupId>
					<artifactId>junit</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<version>1.9.5</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>yahoo.yinst.dh_rainbow_util_java</groupId>
			<artifactId>dh_rainbow_util_java</artifactId>
			<version>0.1.0.22022.444</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>yahoo.yinst.dh_rainbow_util_platform_java</groupId>
			<artifactId>dh_rainbow_util_platform_java</artifactId>
			<version>0.0.5.21995.50</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.soebes.maven.plugins.dmg</groupId>
				<artifactId>doxygen-maven-plugin</artifactId>
				<version>1.0.1</version>
				<configuration>
					<extractPrivate>true</extractPrivate>
					<extractStatic>true</extractStatic>
					<extractLocalMethods>true</extractLocalMethods>
					<optimizeOutputJava>true</optimizeOutputJava>
					<recursive>true</recursive>
					<projectName>${project.artifactId}</projectName>
					<callGraph>true</callGraph>
					<callerGraph>true</callerGraph>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>versions-maven-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<rulesUri>file:maven-version-rules.xml</rulesUri>
				</configuration>
			</plugin>

		</plugins>
		<finalName>${project.artifactId}</finalName>
	</build>
</project>
