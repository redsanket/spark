<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>yahoo.yinst.java_base_build</groupId>
		<artifactId>java_base_build</artifactId>
		<version>3.1.6.182</version>
	</parent>

	<groupId>yahoo.yinst.dh_rainbow_util_batch_java</groupId>
	<artifactId>dh_rainbow_util_batch_java</artifactId>
	<packaging>jar</packaging>
	<version>0.0.1</version>
	<name>dh_rainbow_util_batch_java</name>
	<url>http://twiki.corp.yahoo.com/View/UDA/DataHighway</url>
	<description>Data Highway Rainbow batching utility classes for java</description>

	<prerequisites>
		<maven>2.1</maven>
	</prerequisites>

	<issueManagement>
		<system>Yahoo! Corporate Bugzilla</system>
		<url>http://bug.corp.yahoo.com/buglist.cgi?query_format=advanced&amp;product_name=DHRAINBOW&amp;bug_status=__open__</url>
	</issueManagement>

	<scm>
		<developerConnection>scm:svn:svn+ssh://svn.corp.yahoo.com/yahoo/ccdi/dhrainbow/trunk/util_batch_java</developerConnection>
		<connection>scm:svn:svn+ssh://svn.corp.yahoo.com/yahoo/ccdi/dhrainbow/trunk/util_batch_java</connection>
		<url>http://svn.corp.yahoo.com/view/yahoo/ccdi/dhrainbow/trunk/util_batch_java</url>
	</scm>

	<properties>
		<scm.path>yahoo/ccdi/dhrainbow/trunk/${project.artifactId}</scm.path>
		<failIfNoTests>false</failIfNoTests>
		<log4jPath>src/main/resources/log4j.properties</log4jPath>
		<surefireArgs></surefireArgs>
		<commitBim>ci-bb/commit.bim</commitBim>
		<componentBim>ci-bb/component.bim</componentBim>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<version>1.9.5</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.17</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.5</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.7.5</version>
		</dependency>
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>6.1.1</version>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>junit</groupId>
					<artifactId>junit</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
                <dependency>
                        <groupId>yahoo.yinst.dh_rainbow_util_java</groupId>
                        <artifactId>dh_rainbow_util_java</artifactId>
                        <version>0.1.0.22022.444</version>
                </dependency>
	</dependencies>

	<build>
		<finalName>${project.artifactId}</finalName>
		<plugins>
                        <plugin>
                                <groupId>org.apache.maven.plugins</groupId>
                                <artifactId>maven-compiler-plugin</artifactId>
                                <configuration>
                                        <source>1.6</source>
                                        <target>1.6</target>
                                </configuration>
                        </plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>versions-maven-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<rulesUri>file:maven-version-rules.xml</rulesUri>
					<excludes>
						<exclude>yahoo.yinst.mon_metrics_java</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.14.1</version>
				<configuration>
					<environmentVariables>
						<DH_DISABLE_ALERT_FILE>1</DH_DISABLE_ALERT_FILE>
					</environmentVariables>
				</configuration>
			</plugin>
			<plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>
		</plugins>
	</build>


</project>
