<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>yahoo.yinst.yjava_remote_ip_servlet_filter</groupId>
	<artifactId>yjava_remote_ip_servlet_filter</artifactId>
	<name>yjava_remote_ip_servlet_filter</name>
	<description>Yahoo Remote IP Servlet Filter</description>
	<version>0.7.${build}</version>
	<url>http://twiki.corp.yahoo.com/view/JavaPlatform/RemoteIPServletFilter</url>
	
	<parent>
		<groupId>yahoo.yinst.yjava_base_build</groupId>
		<artifactId>yjava_base_build</artifactId>
		<version>2.1.6.88</version>
	</parent>
	
	<properties>
		<scm.path>/yahoo/yjava/yinfra/remote_ip_servlet_filter/trunk</scm.path>
		<mailingList.name>java-platform-devel</mailingList.name>
		<bug.component>yjava_remote_ip_servlet_filter</bug.component>
		<smoke.test.host>sk1-perfplatform-005.ysm.sk1.yahoo.com</smoke.test.host>
		<smoke.test.port>9999:yjava_tomcat,4080:yjava_jetty</smoke.test.port>
	</properties>
	
	<dependencies>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.5</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>yahoo.yinst.yjava_filter_logic</groupId>
			<artifactId>yjava_filter_logic</artifactId>
			<version>0.12.61</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>yahoo.yinst.yjava_log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.14.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>yahoo.yinst.yjava_servlet</groupId>
			<artifactId>yjava_servlet</artifactId>
			<version>0.5.19</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>yahoo.yinst.yjava_yhdrs</groupId>
			<artifactId>yjava_yhdrs</artifactId>
			<version>0.4.19</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>5.14.9</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<version>1.8.2</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.0.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<argLine>-Djava.library.path=${systemlib}</argLine>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>linux64</id>
			<activation>
				<os>
					<name>Linux</name>
					<arch>amd64</arch>
				</os>
			</activation>
			<properties>
				<platform>x86_64-rhel4-gcc3</platform>
				<systemlib>/home/y/lib64</systemlib>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<executions>
							<execution>
								<id>test-32bit-on64bit</id>
								<phase>test</phase>
								<goals>
									<goal>test</goal>
								</goals>
								<configuration>
									<argLine>-Djava.library.path=target/native/i386-rhel4-gcc3:/home/y/lib</argLine>
									<jvm>/home/y/libexec/java/bin/java</jvm>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>linux</id>
			<activation>
				<os>
					<name>Linux</name>
					<arch>i386</arch>
				</os>
			</activation>
			<properties>
				<platform>i386-rhel4-gcc3</platform>
				<systemlib>/home/y/lib</systemlib>
			</properties>
		</profile>
		<profile>
			<id>secondary</id>
			<activation>
				<property>
					<name>secondary</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>yahoo.yinst.maven_plugins</groupId>
						<artifactId>yjava_maven_plugins_buildyblocks</artifactId>
						<executions>
							<execution>
								<id>pre-integration-test</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>dist_push</goal>
									<goal>igor_update</goal>
									<goal>staging</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<bimFile>secondary_build.bim</bimFile>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>failsafe-maven-plugin</artifactId>
						<version>2.4.3-alpha-1</version>
						<executions>
							<execution>
								<id>default-integration-test</id>
								<goals>
									<goal>integration-test</goal>
								</goals>
							</execution>
							<execution>
								<id>default-verify</id>
								<goals>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<argLine>-Djava.library.path=${systemlib} -Dsmoke.test.host=${smoke.test.host} -Dsmoke.test.port=${smoke.test.port}</argLine>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
