<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 
    <!-- Send debug messages to System.out -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>
 
    <logger name="backtype.storm" level="INFO"> <appender-ref ref="STDOUT" /></logger>
    <logger name="org.apache.zookeeper" level="INFO"> <appender-ref ref="STDOUT" /></logger>
    <logger name="org.eclipse.jetty" level="INFO"> <appender-ref ref="STDOUT" /></logger>
    <logger name="org.apache.thrift7" level="INFO"> <appender-ref ref="STDOUT" /></logger>
    <!-- By default, the level of the root level is set to DEBUG -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
