<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
	<id>jar-with-dependencies</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<!-- we're creating the test-jar as an attachment -->
			<useProjectAttachments>true</useProjectAttachments>
			<unpack>true</unpack>
			<scope>test</scope>
			<excludes>
				<exclude>storm:storm</exclude>
				<exclude>yahoo.yinst.ystorm:storm</exclude>
				<!--<exclude>junit:junit</exclude> -->
				<exclude>log4j:log4j</exclude>
				<exclude>org.slf4j:log4j-over-slf4j</exclude>
				<exclude>org.slf4j:slf4j-log4j12</exclude>
				<exclude>system:system3</exclude>
				<exclude>net.alchim31.maven:scala-maven-plugin</exclude>
				<exclude>org.scala-lang:scala-compiler</exclude>
				<exclude>org.scala-lang:scalap</exclude>
				<exclude>system:yspark_yarn</exclude>
				<exclude>system:ystorm_servlet-api</exclude>
				<exclude>system:ystorm_contrib_http_spout</exclude>
				<exclude>system:ystorm_core</exclude>
				<exclude>system:ystorm_netty</exclude>
				<exclude>system:ystorm_yahoo</exclude>
				<exclude>system:ystorm_thrift7</exclude>
				<exclude>system:ystorm_zookeeper</exclude>
				<exclude>system:ystorm_curator_client</exclude>
				<exclude>system:ystorm_curator_framework</exclude>
				<exclude>system:ystorm_jgrapht</exclude>
				<exclude>system:ystorm_clojure</exclude>
				<exclude>org.mortbay.jetty:jetty</exclude>
				<exclude>system:fetched_ystorm_contrib_http_spout</exclude>
				<exclude>system:fetched_ystorm_core</exclude>
				<exclude>system:fetched_ystorm_netty</exclude>
				<exclude>system:fetched_ystorm_yahoo</exclude>
				<exclude>system:fetched_ystorm_thrift7</exclude>
				<exclude>system:fetched_ystorm_zookeeper</exclude>
				<exclude>system:fetched_ystorm_curator_client</exclude>
				<exclude>system:fetched_ystorm_curator_framework</exclude>
				<exclude>system:fetched_ystorm_jgrapht</exclude>
				<exclude>system:fetched_ystorm_clojure</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
