#!/bin/bash

# build jars for each of the testcases
# this needs to be run on a node of the cluster you're testing against in order
# to get matching src jars for compilation

# need the cluster name we're running against
if [ $# -ne 1 ]; then
  echo "Error: need the CLUSTER name we are running on"
  exit 1
fi
CLUSTER=$1
echo "our test cluster to compile against is: $CLUSTER"

#fire off each of the test's little build scripts
echo ""

./buildTokenRenewalTest_doasBlock_cleanUgi $CLUSTER
./buildTokenRenewalTest_doasBlock_cleanUgi_oldApi $CLUSTER
./buildTokenRenewalTest_doasBlock_cleanUgi_oldApi_webhdfs $CLUSTER
./buildTokenRenewalTest_doasBlock_cleanUgi_proxyUser $CLUSTER
./buildTokenRenewalTest_doasBlock_cleanUgi_proxyUser_CurrentUser $CLUSTER
./buildTokenRenewalTest_doasBlock_cleanUgi_proxyUser_CurrentUser_webhdfs $CLUSTER
./buildTokenRenewalTest_doasBlock_cleanUgi_proxyUser_webhdfs $CLUSTER
./buildTokenRenewalTest_doasBlock_cleanUgi_webhdfs $CLUSTER
./buildTokenRenewalTest_existingUgi $CLUSTER
./buildTokenRenewalTest_existingUgi_oldApi $CLUSTER
./buildTokenRenewalTest_existingUgi_oldApi_webhdfs $CLUSTER
./buildTokenRenewalTest_existingUgi_webhdfs $CLUSTER

