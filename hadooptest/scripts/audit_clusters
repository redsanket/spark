#!/bin/bash

clusters=$*

script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

TIMESTAMP=`date +%y%m%d-%T`
filename="/tmp/scan.log.$TIMESTAMP"
$script_dir/scan_clusters $clusters 2>&1 | tee $filename

echo "==========================================="
echo "SUMMARY"
echo "==========================================="
$script_dir/parse_scan_clusters $filename

rm $filename

